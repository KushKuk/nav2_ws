<?xml version="1.0" encoding="utf-8"?>
<robot name="drive">

<link name="base_link"/>
  <joint name="base_joint" type="fixed">
    <parent link="base_link"/>
    <child link="base"/>
  </joint>

<link name="base">
  <inertial>
    <origin xyz="0.12409 0.20734 0.42766" rpy="0 0 0"/>
    <mass value="36.758"/>
    <inertia ixx="2.1895" ixy="-1.7206e-06" ixz="0.0047092" iyy="2.5602" iyz="0.001442" izz="0.77249"/>
  </inertial>

  <visual>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
      <mesh filename="package://drive/meshes/base.STL"/>
    </geometry>
    <material name="base_mat">
      <color rgba="0.75 0.75 0.75 1"/>
    </material>
  </visual>

  <collision>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
      <mesh filename="package://drive/meshes/base.STL"/>
    </geometry>
  </collision>
</link>




  <link name="ZED_camera_link">
    <inertial>
      <origin xyz="0 0.5 0" rpy="0 0 0"/>
      <mass value="0.2"/>
      <inertia ixx="0.0001" iyy="0.0001" izz="0.0001" ixy="0" ixz="0" iyz="0"/>
    </inertial>

    <visual>
      <origin xyz="0 -0.8 .1" rpy="0 0 -1.57"/>  <!-- =========================
       ZED BODY + FRAMES
       ========================= -->
      <geometry>
        
        <mesh filename="package://drive/meshes/zed2i.stl" scale="1 1 1"/>
      </geometry>
      <material name="ZED_body_color">
        <color rgba="0.2 0.2 0.2 1"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://drive/meshes/zed2i.stl" scale="1 1 1"/>
      </geometry>
    </collision>
  </link>

  <joint name="ZED_joint" type="fixed">
    <parent link="base"/>
    <child link="ZED_camera_link"/>
    <origin xyz="0.12 0.0 0.25" rpy="0 0 0"/>
  </joint>

  <!-- Camera frames -->
  <link name="ZED_left_camera_frame"/>
  <link name="ZED_left_camera_optical"/>
  <link name="ZED_right_camera_frame"/>
  <link name="ZED_right_camera_optical"/>
  <link name="ZED_center_camera_frame"/>
  <link name="ZED_center_camera_optical"/>

  <joint name="ZED_left_camera_joint" type="fixed">
    <parent link="ZED_camera_link"/>
    <child link="ZED_left_camera_frame"/>
    <origin xyz="0 0.06 0" rpy="0 0 0"/>
  </joint>

  <joint name="ZED_left_camera_optical_joint" type="fixed">
    <parent link="ZED_left_camera_frame"/>
    <child link="ZED_left_camera_optical"/>
    <!-- optical frame convention: Rx(-pi/2), Rz(-pi/2) -->
    <origin xyz="0 0 0" rpy="-1.5708 0 -1.5708"/>
  </joint>

  <joint name="ZED_right_camera_joint" type="fixed">
    <parent link="ZED_camera_link"/>
    <child link="ZED_right_camera_frame"/>
    <origin xyz="0 -0.06 0" rpy="0 0 0"/>
  </joint>

  <joint name="ZED_right_camera_optical_joint" type="fixed">
    <parent link="ZED_right_camera_frame"/>
    <child link="ZED_right_camera_optical"/>
    <origin xyz="0 0 0" rpy="-1.5708 0 -1.5708"/>
  </joint>

  <joint name="ZED_center_camera_joint" type="fixed">
    <parent link="ZED_camera_link"/>
    <child link="ZED_center_camera_frame"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <joint name="ZED_center_camera_optical_joint" type="fixed">
    <parent link="ZED_center_camera_frame"/>
    <child link="ZED_center_camera_optical"/>
    <origin xyz="0 0 0" rpy="-1.5708 0 -1.5708"/>
  </joint>

  <!-- =========================
       CAMERA SENSORS (Ignition/Gazebo Sim)
       Note: Sensors live on the *frame* links.
       These publish on Gazebo Transport; bridge to ROS 2 with ros_gz_bridge.
       ========================= -->

  <!-- LEFT CAMERA -->
  <link name="ZED_left_camera_frame_sensor">
  <inertial>
    <mass value="0.0001"/>
    <inertia ixx="0.0001" iyy="0.0001" izz="0.0001" ixy="0" ixz="0" iyz="0"/>
  </inertial>
</link>

<gazebo reference="ZED_left_camera_frame_sensor">
  <plugin name="gz::sim::systems::Camera" filename="libgz-sim-camera-system.so">
    <camera_name>ZED_left_camera</camera_name>
    <update_rate>30</update_rate>
    <visualize>true</visualize>
    <topic>ZED2_left_camera</topic>
    <image_width>1280</image_width>
    <image_height>720</image_height>
    <image_format>R8G8B8</image_format>
    <horizontal_fov>1.3962634</horizontal_fov>
    <clip>
      <near>0.1</near>
      <far>50.0</far>
    </clip>
  </plugin>
</gazebo>

<joint name="ZED_left_camera_sensor_joint" type="fixed">
  <parent link="ZED_left_camera_frame"/>
  <child link="ZED_left_camera_frame_sensor"/>
  <origin xyz="0 0 0" rpy="0 0 0"/>
</joint>


  <!-- RIGHT CAMERA -->
  <link name="ZED_right_camera_frame_sensor">
    <inertial>
      <mass value="0.0001"/>
      <inertia ixx="0.0001" iyy="0.0001" izz="0.0001" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <sensor name="ZED_right_camera" type="camera">
      <always_on>true</always_on>
      <update_rate>30</update_rate>
      <visualize>true</visualize>
      <camera>
        <horizontal_fov>1.3962634</horizontal_fov>
        <image>
          <width>1280</width>
          <height>720</height>
          <format>R8G8B8</format>
        </image>
        <clip>
          <near>0.1</near>
          <far>50.0</far>
        </clip>
      </camera>
    </sensor>
  </link>

  <joint name="ZED_right_camera_sensor_joint" type="fixed">
    <parent link="ZED_right_camera_frame"/>
    <child link="ZED_right_camera_frame_sensor"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!-- CENTER CAMERA -->
  <link name="ZED_center_camera_frame_sensor">
    <inertial>
      <mass value="0.0001"/>
      <inertia ixx="0.0001" iyy="0.0001" izz="0.0001" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <sensor name="ZED_center_camera" type="camera">
      <always_on>true</always_on>
      <update_rate>30</update_rate>
      <visualize>true</visualize>
      <camera>
        <horizontal_fov>1.3962634</horizontal_fov>
        <image>
          <width>1280</width>
          <height>720</height>
          <format>R8G8B8</format>
        </image>
        <clip>
          <near>0.1</near>
          <far>50.0</far>
        </clip>
      </camera>
    </sensor>
  </link>

  <joint name="ZED_center_camera_sensor_joint" type="fixed">
    <parent link="ZED_center_camera_frame"/>
    <child link="ZED_center_camera_frame_sensor"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!--IMU -->
    <!-- IMU Sensor -->
  <link name="imu_link">
    <inertial>
      <mass value="0.01"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1e-5" ixy="0.0" ixz="0.0" iyy="1e-5" iyz="0.0" izz="1e-5"/>
    </inertial>
    <visual>
      <geometry>
        <box size="0.01 0.01 0.01"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <box size=" 1 1 1 "/>
      </geometry>
    </collision>
  </link>
  <joint name="imu_joint" type="fixed">
    <parent link="base"/>
    <child link="imu_link"/>
    <origin xyz="0.5 -0.2 .5" rpy="0 0 0"/>
  </joint>
  <gazebo reference="imu_link">
    <sensor name="imu_sensor" type="imu">
      <pose>0 0 0 0 0 0</pose>
      <update_rate>50</update_rate>
      <always_on>true</always_on>
      <visualize>true</visualize>
      <topic>/imu/data</topic>
      <imu>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.0002</stddev>
        </noise>
      </imu>
      <plugin filename="libignition-gazebo-imu-system.so"
        name="ignition::gazebo::systems::Imu">
        <topic>/imu</topic>
      </plugin>
    </sensor>
  </gazebo>
  <!-- LiDAR link -->
<link name="lidar_link">
  <inertial>
    <mass value="0.01"/>
    <inertia ixx="1e-6" iyy="1e-6" izz="1e-6" ixy="0" ixz="0" iyz="0"/>
  </inertial>
  <visual>
    <geometry>
      <cylinder length="5" radius="3"/>
    </geometry>
    <material>
      <color rgba="0 1 0 1"/>
    </material>
  </visual>
</link>

<!-- Joint to attach to base -->
<joint name="lidar_joint" type="fixed">
  <parent link="base"/>
  <child link="lidar_link"/>
  <origin xyz="0.3 0 0.5" rpy="0 0 0"/>
</joint>

<!-- Gazebo sensor block -->
<gazebo reference="lidar_link">
  <sensor name="lidar_sensor" type="gpu_lidar">
    <pose>0 0 0 0 0 0</pose>
    <update_rate>20</update_rate>
    <visualize>true</visualize>
    <topic>/scan</topic>
    <ray>
      <scan>
        <horizontal>
          <samples>720</samples>      <!-- resolution -->
          <resolution>1</resolution>
          <min_angle>-1.5708</min_angle> <!-- -90 deg -->
          <max_angle>1.5708</max_angle>  <!-- +90 deg -->
        </horizontal>
      </scan>
      <range>
        <min>0.12</min>    <!-- meters -->
        <max>10.0</max>    <!-- meters -->
        <resolution>0.01</resolution>
      </range>
      <noise>
        <type>gaussian</type>
        <mean>0.0</mean>
        <stddev>0.01</stddev>
      </noise>
    </ray>
  </sensor>
</gazebo>

  <!-- =========================
       WHEELS (6x)
       ========================= -->
  <link name="wheel_1">
    <inertial>
      <origin xyz="0.109 -0.001534 -0.0094091" rpy="0 0 0"/>
      <mass value="32.802"/>
      <inertia ixx="0.60349" ixy="-0.0034113" ixz="-0.020925" iyy="0.36113" iyz="0.0002962" izz="0.3629"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><mesh filename="package://drive/meshes/wheel_1.STL"/></geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><mesh filename="package://drive/meshes/wheel_1.STL"/></geometry>
    </collision>
  </link>

  <joint name="wheel_joint_1" type="continuous">
    <origin xyz="-0.12406 -0.94233 -0.11392" rpy="1.0129 -0.057594 3.076"/>
    <parent link="base"/>
    <child link="wheel_1"/>
    <axis xyz="0.99619 -0.014024 -0.08602"/>
  </joint>

  <link name="wheel_2">
    <inertial>
      <origin xyz="0.109 -0.001534 -0.0094091" rpy="0 0 0"/>
      <mass value="32.802"/>
      <inertia ixx="0.60349" ixy="-0.0034113" ixz="-0.020925" iyy="0.36113" iyz="0.00029621" izz="0.3629"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><mesh filename="package://drive/meshes/wheel_2.STL"/></geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><mesh filename="package://drive/meshes/wheel_2.STL"/></geometry>
    </collision>
  </link>

  <joint name="wheel_joint_2" type="continuous">
    <origin xyz="0.36212 -0.94269 -0.11392" rpy="1.71 -0.0019564 -0.087245"/>
    <parent link="base"/>
    <child link="wheel_2"/>
    <axis xyz="0.99619 -0.014024 -0.08602"/>
  </joint>

  <link name="wheel_3">
    <inertial>
      <origin xyz="0.109 -0.001534 -0.0094091" rpy="0 0 0"/>
      <mass value="32.802"/>
      <inertia ixx="0.60349" ixy="-0.0034113" ixz="-0.020925" iyy="0.36113" iyz="0.0002962" izz="0.3629"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><mesh filename="package://drive/meshes/wheel_3.STL"/></geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><mesh filename="package://drive/meshes/wheel_3.STL"/></geometry>
    </collision>
  </link>

  <joint name="wheel_joint_3" type="continuous">
    <origin xyz="-0.12406 -0.49233 -0.11392" rpy="0.83798 -0.068122 3.087"/>
    <parent link="base"/>
    <child link="wheel_3"/>
    <axis xyz="0.99619 -0.014024 -0.08602"/>
  </joint>

  <link name="wheel_4">
    <inertial>
      <origin xyz="0.109 -0.001534 -0.0094091" rpy="0 0 0"/>
      <mass value="32.802"/>
      <inertia ixx="0.60349" ixy="-0.0034113" ixz="-0.020925" iyy="0.36113" iyz="0.00029621" izz="0.3629"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><mesh filename="package://drive/meshes/wheel_4.STL"/></geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><mesh filename="package://drive/meshes/wheel_4.STL"/></geometry>
    </collision>
  </link>

  <joint name="wheel_joint_4" type="continuous">
    <origin xyz="0.36212 -0.49269 -0.11392" rpy="1.9152 0.015899 -0.08581"/>
    <parent link="base"/>
    <child link="wheel_4"/>
    <axis xyz="0.99619 -0.014024 -0.08602"/>
  </joint>

  <link name="wheel_5">
    <inertial>
      <origin xyz="0.109 -0.001534 -0.0094091" rpy="0 0 0"/>
      <mass value="32.802"/>
      <inertia ixx="0.60349" ixy="-0.0034113" ixz="-0.020925" iyy="0.36113" iyz="0.00029621" izz="0.3629"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><mesh filename="package://drive/meshes/wheel_5.STL"/></geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><mesh filename="package://drive/meshes/wheel_5.STL"/></geometry>
    </collision>
  </link>

  <joint name="wheel_joint_5" type="continuous">
    <origin xyz="-0.12156 0.11889 -0.11392" rpy="0.12629 -0.087212 -3.1385"/>
    <parent link="base"/>
    <child link="wheel_5"/>
    <axis xyz="0.99619 -0.014024 -0.08602"/>
  </joint>

  <link name="wheel_6">
    <inertial>
      <origin xyz="0.109 -0.001534 -0.0094091" rpy="0 0 0"/>
      <mass value="32.802"/>
      <inertia ixx="0.60349" ixy="-0.0034113" ixz="-0.020925" iyy="0.36113" iyz="0.0002962" izz="0.3629"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><mesh filename="package://drive/meshes/wheel_6.STL"/></geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><mesh filename="package://drive/meshes/wheel_6.STL"/></geometry>
    </collision>
  </link>

  <joint name="wheel_joint_6" type="continuous">
    <origin xyz="0.35962 0.11889 -0.11392" rpy="1.9946 0.022675 -0.084276"/>
    <parent link="base"/>
    <child link="wheel_6"/>
    <axis xyz="0.99619 -0.014024 -0.08602"/>
  </joint>

  <!-- =========================
       ros2_control for Gazebo Sim
       ========================= -->
  <ros2_control name="IgnitionSystem" type="system">
    <hardware>
      <plugin>ign_ros2_control/IgnitionSystem</plugin>
    </hardware>

    <joint name="wheel_joint_1">
      <command_interface name="velocity"><param name="min">-10</param><param name="max">10</param></command_interface>
      <state_interface name="velocity"/>
      <state_interface name="position"/>
    </joint>
    <joint name="wheel_joint_2">
      <command_interface name="velocity"><param name="min">-10</param><param name="max">10</param></command_interface>
      <state_interface name="velocity"/>
      <state_interface name="position"/>
    </joint>
    <joint name="wheel_joint_3">
      <command_interface name="velocity"><param name="min">-10</param><param name="max">10</param></command_interface>
      <state_interface name="velocity"/>
      <state_interface name="position"/>
    </joint>
    <joint name="wheel_joint_4">
      <command_interface name="velocity"><param name="min">-10</param><param name="max">10</param></command_interface>
      <state_interface name="velocity"/>
      <state_interface name="position"/>
    </joint>
    <joint name="wheel_joint_5">
      <command_interface name="velocity"><param name="min">-10</param><param name="max">10</param></command_interface>
      <state_interface name="velocity"/>
      <state_interface name="position"/>
    </joint>
    <joint name="wheel_joint_6">
      <command_interface name="velocity"><param name="min">-10</param><param name="max">10</param></command_interface>
      <state_interface name="velocity"/>
      <state_interface name="position"/>
    </joint>
  </ros2_control>

  <!-- Gazebo Sim ros2_control system plugin -->
  <plugin filename="libign_ros2_control-system.so" name="ign_ros2_control::IgnitionROS2ControlPlugin">
    <!-- Update to your real installed path if different -->
    <parameters>$(find-pkg-share drive)/config/rover_controllers.yaml</parameters>
  </plugin>
</robot>
